@model Obras.Models.ViewLogin
@{
    ViewBag.Title = "login";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Start Bootstrap - SB Admin Version 2.0 Demo</title>

    <!-- Core CSS - Include with every page -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/fontawesome/font-awesome.min.css")" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="@Url.Content("~/Content/sb-admin.css")" rel="stylesheet">

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id="FormLogin"}))
                        {
                            <fieldset>
                                <div class="form-group">
                                    @(Html.Kendo().TextBoxFor(m => m.UserName).HtmlAttributes(new { placeholder = "E-mail", required = "required", type = "email", data_email_msg = "Correo no valido", @class="form-control" }))
                                </div>
                                <div class="form-group">
                                    @(Html.Kendo().TextBoxFor(m => m.Password).HtmlAttributes(new { placeholder = "Contraseña", required = "required", type = "password",  @class = "form-control"}))
                                    
                                </div>
                                
                                @(Html.Kendo().Button().Name("LogIn").Content("Entrar"))
                            </fieldset>
                        }
                            
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $("form").submit(function (event) {
            var validator = $("#FormLogin").kendoValidator().data("kendoValidator");
        })
   </script>

    <!-- Core Scripts - Include with every page -->
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/metisMenu.js")"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="@Url.Content("~/Scripts/sb-admin.js")"></script>

</body>

</html>


